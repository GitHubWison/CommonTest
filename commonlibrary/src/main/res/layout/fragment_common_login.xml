<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:background="@drawable/login_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="麦迪斯顿系统"
        android:id="@+id/logintitle_textview"
        android:textSize="@dimen/font_big"
        android:textStyle="bold"
        android:textColor="@color/app_main_color"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"

        android:layout_marginTop="64dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/logintitle_textview"
        android:layout_centerHorizontal="true"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"

            android:id="@+id/common_loginmain_linearlayout"
            android:background="@drawable/login_form_bg"
            >
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/input_login_height"
                android:background="@drawable/input_login_bg"
                android:layout_marginTop="@dimen/component_edge_half_margin"
                android:layout_marginLeft="@dimen/component_edge_double_margin"
                android:layout_marginRight="@dimen/component_edge_double_margin"
                android:gravity="center"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/user"
                    android:layout_marginLeft="@dimen/component_edge_margin"
                    android:layout_marginRight="@dimen/component_edge_margin"
                    android:id="@+id/imageView" />

                <EditText
                    android:layout_width="0dp"
                    android:background="@null"
                    android:layout_height="match_parent"
                    android:textSize="@dimen/font_small1"
                    android:singleLine="true"
                    android:id="@+id/username_edittext"
                    android:hint="@string/login_username_hint"
                    android:layout_weight="1" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/input_login_height"
                android:background="@drawable/input_login_bg"
                android:layout_marginTop="@dimen/component_edge_margin"
                android:layout_marginLeft="@dimen/component_edge_double_margin"
                android:layout_marginRight="@dimen/component_edge_double_margin"
                android:gravity="center"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/pass"
                    android:layout_marginLeft="@dimen/component_edge_margin"
                    android:layout_marginRight="@dimen/component_edge_margin"
                    android:id="@+id/imageView1" />

                <EditText
                    android:layout_width="0dp"
                    android:background="@null"
                    android:layout_height="match_parent"
                    android:textSize="@dimen/font_small1"
                    android:singleLine="true"
                    android:id="@+id/password_edittext"
                    android:inputType="textPassword"
                    android:hint="@string/login_pwd_hint"
                    android:layout_weight="1" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/input_login_height"
                android:layout_marginTop="@dimen/component_edge_margin"
                android:layout_marginLeft="@dimen/component_edge_double_margin"
                android:layout_marginRight="@dimen/component_edge_double_margin"
                android:background="@drawable/click_style"

                android:textColor="@color/whiteColor"
                android:textSize="@dimen/font_small1"
                android:gravity="center"
                android:text="登录"
                android:id="@+id/login_textview"
                android:layout_gravity="center_horizontal" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/input_title_height"
                android:layout_marginTop="@dimen/component_edge_margin"
                android:layout_marginLeft="@dimen/component_edge_double_margin"
                android:layout_marginRight="@dimen/component_edge_double_margin">
                <com.example.commonlibrary.components.CheckBoxButton
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="match_parent"
                    app:checkboxbutton_title="记住登录名"
                    app:checkboxbutton_isselected="true"
                    app:checkboxbutton_titlecolor="@color/task_bg1"
                    android:id="@+id/rememberusername_checkboxbutton"

                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text=""

                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textSize="@dimen/font_small1"
                    android:text="设置"
                    android:background="@drawable/component_click_style"
                    android:id="@+id/setting_textview"
                    android:textColor="@color/task_bg1"
                    />
            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/component_edge_margin"
                android:src="@drawable/logo"
                android:id="@+id/imageView2"
                android:layout_gravity="center_horizontal" />


        </LinearLayout>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
    </LinearLayout>


</RelativeLayout>
