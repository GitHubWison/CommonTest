<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/input_title_height"
        android:text=""
        android:textSize="@dimen/font_small1"
        android:id="@+id/title_spinnerwitheditor"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@drawable/input_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/input_height"
        android:layout_below="@+id/title_spinnerwitheditor"
        android:paddingLeft="@dimen/component_edge_half_margin"
        android:paddingRight="@dimen/component_edge_half_margin"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <EditText
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textSize="@dimen/font_small1"
            android:id="@+id/inputedittext_spinnerwitheditor"
            android:background="@null"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/pull"
            android:id="@+id/pullbutton_spinnerwitheditor" />

    </LinearLayout>
</RelativeLayout>
